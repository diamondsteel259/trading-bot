# VALR Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# VALR API Configuration (Required)
# =============================================================================
# Get these from your VALR account settings
VALR_API_KEY=your_valr_api_key_here
VALR_API_SECRET=your_valr_api_secret_here

# =============================================================================
# Trading Configuration
# =============================================================================
# Comma-separated list of trading pairs to monitor
TRADING_PAIRS=BTCZAR,ETHZAR,XRPZAR,ADAZAR,SOLZAR,DOGEZAR,SHIBZAR

# RSI threshold for oversold conditions (default: 45.0)
RSI_THRESHOLD=45.0

# Take profit percentage (default: 1.5%)
TAKE_PROFIT_PERCENTAGE=1.5

# Stop loss percentage (default: 2.0%)
STOP_LOSS_PERCENTAGE=2.0

# Scalp timing
ENTRY_ORDER_TIMEOUT_SECONDS=60
EXIT_ORDER_TIMEOUT_MINUTES=10
POSITION_TIMEOUT_MINUTES=30

# Bot runtime intervals
SCAN_INTERVAL_SECONDS=60
POSITION_MONITOR_INTERVAL_SECONDS=5
RSI_PAIR_COOLDOWN_SECONDS=20

# Base trade amount per position (in quote currency, e.g. ZAR)
# Increased from 30.0 to 100.0 to ensure all positions are well above exchange minimums
BASE_TRADE_AMOUNT=100.0

# Fee assumptions (used for balance checks and profit expectations)
MAKER_FEE_PERCENT=0.18
TAKER_FEE_PERCENT=0.35

# =============================================================================
# Risk Management
# =============================================================================
# Maximum position size (in quote currency)
MAX_POSITION_SIZE=1000.0

# Maximum trades per day
MAX_DAILY_TRADES=20

# =============================================================================
# Retry & Resilience Configuration
# =============================================================================
# Maximum number of retries for failed API calls
MAX_RETRIES=3

# Backoff factor for exponential backoff (default: 2.0)
RETRY_BACKOFF_FACTOR=2.0

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Rate limit - maximum requests per minute (default: 600)
RATE_LIMIT_REQUESTS_PER_MINUTE=600

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/valr_bot.log

# Maximum log file size in MB (default: 10)
LOG_MAX_SIZE_MB=10

# Number of backup log files to keep (default: 5)
LOG_BACKUP_COUNT=5

# =============================================================================
# Order Persistence Configuration
# =============================================================================
# Enable order persistence for crash recovery (true/false)
ENABLE_ORDER_PERSISTENCE=true

# File path for order persistence
ORDERS_FILE_PATH=data/orders.json

# =============================================================================
# Optional Configuration Overrides
# =============================================================================
# You can override default pair-specific decimal precision here if needed
# PAIR_DECIMALS={"BTCZAR": 8, "ETHZAR": 6, "ADAUSD": 6}